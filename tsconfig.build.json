{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "skipLibCheck": true,
        "lib": [
            "es7",
            "DOM"
        ],
        "target": "es6",
        "outDir": "./cjs",
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "cjs",
        "esm",
    ],
}